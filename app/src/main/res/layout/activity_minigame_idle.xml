<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/Return"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp"
        android:layout_marginBottom="46dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textSize="40sp"
        android:id="@+id/Code"
        android:minHeight="50dp"
        android:minWidth="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp" />

    <EditText
        android:id="@+id/passcode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Passcode"
        android:inputType="text"
        android:layout_below="@id/Code"
        android:layout_marginTop="5dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/Code"
        android:layout_alignStart="@+id/Code"
        android:layout_alignRight="@+id/Code"
        android:layout_alignEnd="@+id/Code" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:id="@+id/button10"
        android:onClick="completeRepair"
        android:layout_alignBottom="@+id/Return"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please enter the password \n to initiate repair protocol."
        android:textSize="25sp"
        android:layout_marginTop="15dp"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>