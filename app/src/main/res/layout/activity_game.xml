<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nl.tudelft.pixelperfect.pixelperfect.GameActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_complete_fire_event"
        android:id="@+id/button_complete_fire_event"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/button_complete_asteroid_field_event"
        android:layout_alignRight="@+id/button_complete_asteroid_field_event"
        android:layout_alignEnd="@+id/button_complete_asteroid_field_event"
        android:onClick="completeFireEvent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_complete_asteroid_field_event"
        android:id="@+id/button_complete_asteroid_field_event"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="78dp"
        android:layout_marginStart="78dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="completeAsteroidFieldEvent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_complete_hostile_ship_event"
        android:id="@+id/button_complete_hostile_ship_event"
        android:layout_above="@+id/button_complete_fire_event"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="112dp"
        android:layout_marginEnd="112dp"
        android:onClick="completeHostileShipEvent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_complete_plasma_leak_event"
        android:id="@+id/button_complete_plasma_leak_event"
        android:layout_alignTop="@+id/button_complete_fire_event"
        android:layout_alignLeft="@+id/button_complete_hostile_ship_event"
        android:layout_alignStart="@+id/button_complete_hostile_ship_event"
        android:onClick="completePlasmaLeakEvent" />
</RelativeLayout>
