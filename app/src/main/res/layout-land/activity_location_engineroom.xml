<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff9b4">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_complete_fire_event"
        android:id="@+id/button_complete_fire_event"
        android:onClick="completeFireEvent"
        android:layout_marginLeft="117dp"
        android:layout_marginStart="117dp"
        android:layout_alignTop="@+id/button_complete_plasma_leak_event"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_complete_plasma_leak_event"
        android:id="@+id/button_complete_plasma_leak_event"
        android:onClick="completePlasmaLeakEvent"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="109dp"
        android:layout_marginEnd="109dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>