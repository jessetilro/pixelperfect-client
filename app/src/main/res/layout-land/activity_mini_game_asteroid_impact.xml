<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mini_game_asteroid_impact_seekBar"
        android:layout_marginLeft="167dp"
        android:layout_marginStart="167dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:indeterminate="false"
        android:clickable="false" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mini_game_asteroid_impact_progressBar"
        android:layout_marginLeft="137dp"
        android:layout_marginStart="137dp"
        android:indeterminate="false"
        android:layout_alignTop="@+id/mini_game_asteroid_impact_seekBar"
        android:layout_toRightOf="@+id/mini_game_asteroid_impact_seekBar"
        android:layout_toEndOf="@+id/mini_game_asteroid_impact_seekBar" />

</RelativeLayout>